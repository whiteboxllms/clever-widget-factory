{
  "name": "sari-sari-agent",
  "version": "1.0.0",
  "description": "Conversational AI system for self-serve farm stores",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:backup": "node scripts/backup-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:rollback": "node scripts/rollback-database.js",
    "deploy": "npm run build && node scripts/deploy.js"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.0.0",
    "@aws-sdk/client-lambda": "^3.0.0",
    "@aws-sdk/client-rds": "^3.0.0",
    "dotenv": "^17.2.3",
    "mysql2": "^3.6.0",
    "pg": "^8.16.3",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "fast-check": "^3.15.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "ai",
    "conversational",
    "farm",
    "inventory",
    "aws",
    "serverless"
  ],
  "author": "Farm Owner",
  "license": "MIT"
}
